#include "evisense_pcb_v_2_3_common-pinctrl.dtsi"

/ {
	model = "EviSense v-2-3";
	compatible = "keiltronic,evisense_pcb_v_2_3";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
	};

	aliases{
		led0 = &led0;
		btn0 = &button0;
		btn1 = &button1;
		myspiflash = &mt25ql256_0;
		mysensor = &bmx160;
		myleddriver = &lp5009;
		lp5009enable = &lp5009_enable;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
			label = "Blue dev LED";
		};

		lp5009_enable: lp5009_en {
			gpios = <&gpio0 3 GPIO_ACTIVE_HIGH>;
			label = "LED driver enable pin";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 18 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Internal button";
		};
		button1: button_1 {
			gpios = <&gpio0 19 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "User button";
		};
	};
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&pwm0 {
	status = "okay";
	pinctrl-0 = <&pwm0_default>;
	pinctrl-1 = <&pwm0_sleep>;
	pinctrl-names = "default", "sleep";
};

&i2c2 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	pinctrl-0 = <&i2c2_default>;
	pinctrl-1 = <&i2c2_sleep>;
	pinctrl-names = "default", "sleep";
	clock-frequency = <I2C_BITRATE_FAST>;

	max17201g: max17201g@6c {
		compatible = "maxim,max17201g";
		reg = <0x6c>;
	};

	lp5009: lp5009@14 {
		compatible = "ti,lp5009";
		reg = <0x14>;
	};

	bmx160: bmx160@68 {
		compatible = "bosch,bmx160";
		reg = <0x68>;
		int-gpios = <&gpio0 15 0>, <&gpio0 16 0>;
	};

};

&spi3 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	cs-gpios = <&gpio0 27 GPIO_ACTIVE_LOW>, <&gpio0 31 GPIO_ACTIVE_LOW>;
	pinctrl-0 = <&spi3_default>;
	pinctrl-1 = <&spi3_sleep>;
	pinctrl-names = "default", "sleep";

	mt25ql256_0: mt25ql256@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		jedec-id = [ 20 BA 19  ];
		size = <268435456>;
		spi-max-frequency = <8000000>;
	};

	mt25ql256_1: mt25ql256@1 {
		compatible = "jedec,spi-nor";
		reg = <1>;
		jedec-id = [ 20 BA 19  ];
		size = <268435456>;
		spi-max-frequency = <8000000>;
	};
};

&timer0 {
	status = "okay";
};

&timer1 {
	status = "okay";
};

&timer2 {
	status = "okay";
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	current-speed = <115200>;
	status = "okay";
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};

&uart1 {
	compatible = "nordic,nrf-uarte";
	current-speed = <38400>;
	status = "okay";
	pinctrl-0 = <&uart1_default>;
	pinctrl-1 = <&uart1_sleep>;
	pinctrl-names = "default", "sleep";
};

&flash0 {
	/*
	 * For more information, see:
	 * http: //docs.zephyrproject.org/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x10000>;
		};
		slot0_partition: partition@10000 {
			label = "image-0";
		};
		slot0_ns_partition: partition@40000 {
			label = "image-0-nonsecure";
		};
		slot1_partition: partition@80000 {
			label = "image-1";
		};
		slot1_ns_partition: partition@b0000 {
			label = "image-1-nonsecure";
		};
		scratch_partition: partition@f0000 {
			label = "image-scratch";
			reg = <0x000f0000 0xa000>;
		};
		storage_partition: partition@fa000 {
			label = "storage";
			reg = <0x000fa000 0x00006000>;
		};
	};
};

/ {

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		sram0_s: image_s@20000000 {
			/* Secure image memory */
		};

		sram0_bsd: image_bsd@20010000 {
			/* BSD (shared) memory */
		};

		sram0_ns: image_ns@20020000 {
			/* Non-Secure image memory */
		};
	};
};

/* Include partition configuration file */
#include "evisense_pcb_v_2_3_partition_conf.dts"

